@model IEnumerable<Estate.EndPoint.ViewModels.GetEstatesViewModel>
<h2>لیست املاک</h2>

<a asp-action="Create" class="btn btn-success mb-3">ایجاد ملک جدید</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>عنوان</th>
        <th>استان</th>
        <th>شهر</th>
        <th>طبقه</th>
        <th>نوع سند</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var estate in Model)
    {
        <tr>
            <td>@estate.Title</td>
            <td>@estate.Province</td>
            <td>@estate.City</td>
            <td>@estate.FloorNumber</td>
            <td>@estate.DocumentType</td>
            <td>
                <a asp-action="Details" asp-route-id="@estate.Id" class="btn btn-info btn-sm">نمایش</a>
                <a asp-action="Edit" asp-route-id="@estate.Id" class="btn btn-warning btn-sm">ویرایش</a>
                <a asp-action="Delete" asp-route-id="@estate.Id" class="btn btn-danger btn-sm">حذف</a>
            </td>
        </tr>
    }
    </tbody>
</table>